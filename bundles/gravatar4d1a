function updateGravatarPicture(n,t,i){$.post(n,{emailAddress:t}).done(function(n){$("#"+i).attr("src",n)})}(function(n){n.fn.gravatarPreview=function(){return this.each(function(){n(this).unbind("mouseenter mousemove mouseleave"),n(this).hover(function(){var t=n(this),i=t.attr("src");i=i.replace(/\?s=\d+/g,"?s=300"),n("body").after(n("<img />").attr("src",i).attr("id","fullSizeGravatar"));var r=t.position(),u=r.left-window.scrollX+t.width()+10,f=r.top-window.scrollY;n("#fullSizeGravatar").css({position:"fixed","z-index":99,left:u,top:f,display:"none",border:"1px solid black",padding:"4px",backgroundColor:"white"}),n("#fullSizeGravatar").fadeIn("slow")},function(){n("#fullSizeGravatar").fadeOut("fast")})})}})(jQuery),$(document).ready(function(){var n=$('img[src*="gravatar.com"]');n.gravatarPreview(),n.css({cursor:"help"})})